--Return the names of Disney stars and the names of their costars.

SELECT 
    a.firstname, a.lastname, 
    b.firstname, b.lastname 
FROM disney_costars
    JOIN disney_stars a
    ON a.id = disney_costars.costar_1_id
    JOIN disney_stars b
    ON b.id = disney_costars.costar_2_id;
    
--Which projects have Selena Gomez starred in?

SELECT 
    disney_stars.firstname, 
    disney_stars.lastname, 
    disney_projects.title 
FROM disney_stars 
    JOIN disney_projects
    ON disney_stars.id = disney_projects.star_id 
    WHERE disney_stars.firstname = 'Selena';
    
--Return the names of Disney stars born in the USA and their hometowns.

SELECT 
    disney_stars.firstname, 
    disney_stars.lastname, 
    disney_hometowns.name, 
    disney_hometowns.region 
FROM disney_stars
    JOIN disney_hometowns
    ON disney_stars.id = disney_hometowns.star_id
    WHERE country = 'USA';
    
--Return the titles of Disney projects and the names of stars who make an appearance in them.

SELECT 
    disney_projects.title, 
    disney_stars.firstname, 
    disney_stars.lastname
FROM disney_projects 
    JOIN disney_stars
    ON disney_projects.star_id = disney_stars.id;

--Return the average number of projects that Disney stars make an appearance in throughout their Disney careers.

SELECT ROUND(AVG(number_disneyprojects)) AS avg_number_disneyprojects
FROM disney_stars;

--Return the genre of the latest project each Disney star appeared in.

SELECT 
    disney_stars.firstname,
    disney_stars.lastname,
    disney_stars.latest_disneyproject,
    disney_projects.genre
FROM disney_stars
    JOIN disney_projects
    ON disney_stars.id = disney_projects.star_id;
